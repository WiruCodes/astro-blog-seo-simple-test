---
import { Schema } from "astro-seo-schema";

const {
  type = "article",
  title,
  description,
  pubDate,
  updatedDate,
  author,
  image,
  slug
} = Astro.props;

const postUrl = new URL(`/blog/${slug}/`, import.meta.env.SITE).href;

// Build structured data for JSON-LD
const articleSchema = {
  "@context": "https://schema.org",
  "@type": "BlogPosting",
  headline: title,
  description: description,
  ...(image && { image: new URL(image.src, import.meta.env.SITE).href }),
  datePublished: pubDate.toISOString(),
  dateModified: (updatedDate ?? pubDate).toISOString(),
  ...(author && { author: { "@type": "Person", name: author } }),
  mainEntityOfPage: {
    "@type": "WebPage",
    "@id": postUrl,
  },
  url: postUrl,
} as any; // <-- cast to any to satisfy TypeScript
---

<!-- SEO meta tags -->
<SEO
  title={title}
  description={description}
  pubDate={pubDate}
  updatedDate={updatedDate ?? pubDate}
  image={image ? new URL(image.src, import.meta.env.SITE).href : undefined}
  canonical={postUrl}
  url={postUrl}
/>

<!-- Optional structured data for Google rich snippets -->
<Schema item={articleSchema} />